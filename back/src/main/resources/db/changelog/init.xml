<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="user-seq" author="guillaumesubra1">
        <createSequence sequenceName="user_generator" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="user" author="guillaumesubra1">
        <createTable tableName="admin">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_user_email"/>
            </column>
            <column name="created" type="timestamp"/>
            <column name="last_modified" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="movie-seq" author="guillaumesubra1">
        <createSequence sequenceName="movie_generator" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="movie" author="guillaumesubra1">
        <createTable tableName="movie">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="admin" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="varchar(256)"/>
            <column name="duration" type="int"/>
            <column name="release" type="varchar(4)">
                <constraints nullable="false"/>
            </column>
            <column name="actors" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="producer" type="varchar(100)"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="admin" baseTableName="movie" constraintName="fk_movie_admin_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="admin" validate="true"/>
    </changeSet>

    <changeSet id="picture-seq" author="guillaumesubra1">
        <createSequence sequenceName="picture_generator" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="picture" author="guillaumesubra1">
        <createTable tableName="picture">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="movie" type="bigint">
                <constraints  nullable="false" unique="true" />
            </column>
            <column name="file" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_content" type="${blobType}">
                <constraints nullable="false" />
            </column>
            <column name="file_content_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="is_cover" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="movie" baseTableName="picture" constraintName="fk_picture_movie_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="movie" validate="true"/>
    </changeSet>

    <changeSet id="room" author="guillaumesubra1">
        <createTable tableName="room">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="seats" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="used" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="sessions" author="guillaumesubra1">
        <createTable tableName="sessions">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="movie" type="bigint">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="room" type="bigint">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="created" type="timestamp"/>
            <column name="last_modified" type="timestamp"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="movie" baseTableName="sessions" constraintName="fk_session_movie_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="movie" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="room" baseTableName="sessions" constraintName="fk_session_room_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="room" validate="true"/>
    </changeSet>

    <changeSet id="booking" author="guillaumesubra1">
        <createTable tableName="booking">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="viewer_email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="session" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="session" baseTableName="booking" constraintName="fk_booking_session_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="sessions" validate="true"/>
    </changeSet>
</databaseChangeLog>
